// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  address   String
  createdAt DateTime @default(now())

  Schedule Schedule[]
}

model Schedule {
  id          String @unique @default(uuid())
  userId      String
  tutor       String
  contact     String
  petName     String
  service     String
  dateService String
  status      String
  observation String

  user User @relation(fields: [userId], references: [id])
}
